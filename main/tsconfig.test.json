{
    "extends": "@tsconfig/recommended/tsconfig.json",
    "compilerOptions": {
        "composite": true,
        "declaration": true,
        "declarationDir": "./test/types",
        "declarationMap": true,
        "incremental": true,
        "lib": ["ES6"],
        "outDir": "./test",
        "rootDir": "./src",
        "sourceMap": true
    },
    "include": [
        "**/*.test.ts"
    ],
    "exclude": [
        "node_modules",
        "types",
        "**/*.js",
        "**/*.d.ts"
    ],
    "references": [
        { "path": "./tsconfig.json" }
    ]
}
