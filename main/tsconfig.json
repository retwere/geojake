{
    "extends": "@tsconfig/recommended/tsconfig.json",
    "compilerOptions": {
        "composite": true,
        "declaration": true,
        "declarationDir": "./types",
        "declarationMap": true,
        "incremental": true,
        "lib": ["ES6"],
        "outDir": "./lib",
        "rootDir": "./src",
        "sourceMap": true
    },
    "include": [
        "**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "**/*.test.ts",
        "**/*.js"
    ]
}
